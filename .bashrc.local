# Activate uvws on shell startup if it exists
if [ -f "$HOME/uvws/.venv/bin/activate" ]; then
    source "$HOME/uvws/.venv/bin/activate"
fi

# Switch to uvws workspace mode
ws () {
    if [ ! -f "$HOME/uvws/.venv/bin/activate" ]; then
        echo "âŒ uvws not found at ~/uvws"
        echo "   Clone it with: cd ~ && git clone git@github.com:charlesvardeman/uvws.git && cd uvws && uv sync"
        return 1
    fi

    # Deactivate current venv if active
    if command -v deactivate &> /dev/null; then
        deactivate
    fi

    source "$HOME/uvws/.venv/bin/activate"
    echo "âœ… Switched to uvws workspace mode"
}

# Switch to local .venv mode
lv () {
    if [ ! -f ".venv/bin/activate" ]; then
        echo "âŒ No .venv found in current directory"
        return 1
    fi

    # Deactivate current venv if active
    if command -v deactivate &> /dev/null; then
        deactivate
    fi

    source .venv/bin/activate
    echo "âœ… Switched to local .venv mode"
}

# Add package(s) to uvws workspace and commit
ws-add () {
    if [ -z "$1" ]; then
        echo "Usage: ws-add <package> [package2 ...]"
        return 1
    fi

    if [ ! -d "$HOME/uvws" ]; then
        echo "âŒ uvws not found at ~/uvws"
        return 1
    fi

    pushd "$HOME/uvws" > /dev/null || return 1

    echo "ðŸ“¦ Adding $* to uvws workspace..."
    uv add "$@" || { popd > /dev/null; return 1; }

    git add pyproject.toml
    git commit -m "Add $* to workspace"
    git push

    popd > /dev/null
    echo "âœ… Added $* to workspace and pushed to GitHub"
}

# Update all packages in uvws workspace
ws-update () {
    if [ ! -d "$HOME/uvws" ]; then
        echo "âŒ uvws not found at ~/uvws"
        return 1
    fi

    pushd "$HOME/uvws" > /dev/null || return 1

    echo "ðŸ“¦ Updating uvws workspace packages..."
    uv sync --upgrade || { popd > /dev/null; return 1; }

    git add pyproject.toml
    git commit -m "Update workspace packages"
    git push

    popd > /dev/null
    echo "âœ… Updated workspace packages and pushed to GitHub"
}
